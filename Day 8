insql a clause is a specifiv  a sql statement that defines various aspects of the query

Select *from clientmaster where clientno='205';






create table instructor(
  InstructorID Varchar(10) Primary key,
  email Varchar(30) unique not null,
  Firstname Varchar(20) not null,
  Lastname Varchar(15) not null
);
insert into instructor values('101','sohii@gmail.com','sai','sweety'),
 							 ('102','dishu@gmail.com','dishu','sss');



select*from score where CreditObtained>3;



select *from score where CreditObtained>3 and courseid='c103';






create table course(
  courseId varchar(12) primary key,
  courseTitle varchar(20) not null,
  credits int not null
);


insert into course(courseId,courseTitle,credits)
values('c1','java',3),('c2','python',3),('c3','c++',3);
