import java.util.Scanner;

public class Solution {

    static int utopianTree(int n) {
        int height = 1;

        for (int i = 1; i <= n; i++) {
            height = (i % 2 != 0) ? height * 2 : height + 1;
        }
        return height;
    }

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();

        for (int i = 0; i < t; i++) {
            int n = sc.nextInt();
            System.out.println(utopianTree(n));
        }

        sc.close();
    }
}


class Bank {

    // instance variable
    double amount;

    // parameterized constructor
    Bank(double amount) {
        this.amount = amount;
    }

    // withdraw method
    void withdraw(double withdrawAmount) {

        String message = (withdrawAmount <= amount)
                ? "Withdraw successful"
                : "Insufficient balance";

        System.out.println(message);

        // update balance only if sufficient
        amount = (withdrawAmount <= amount)
                ? amount - withdrawAmount
                : amount;
    }

    // deposit method
    void deposit(double depositAmount) {
        amount = amount + depositAmount;
        System.out.println("Deposit successful");
    }

    public static void main(String[] args) {

        // sample input
        Bank b = new Bank(10000);

        // withdraw
        b.withdraw(3000);

        // deposit
        b.deposit(5000);

        // final balance
        System.out.println("Total Balance: " + b.amount);
    }
}




class Bank {

    // instance variable
    double amount;

    // parameterized constructor
    Bank(double amount) {
        this.amount = amount;
    }

    // withdraw method
    void withdraw(double withdrawAmount) {

        String message = (withdrawAmount <= amount)
                ? "Withdraw successful"
                : "Insufficient balance";

        System.out.println(message);

        // update balance only if sufficient
        amount = (withdrawAmount <= amount)
                ? amount - withdrawAmount
                : amount;
    }

    // deposit method
    void deposit(double depositAmount) {
        amount = amount + depositAmount;
        System.out.println("Deposit successful");
    }

    public static void main(String[] args) {

        // sample input
        Bank b = new Bank(10000);

        // withdraw
        b.withdraw(3000);

        // deposit
        b.deposit(5000);

        // final balance
        System.out.println("Total Balance: " + b.amount);
    }
}


class Login {

    // private variables
    private String userName;
    private String password;

    // setter for username
    public void setUserName(String userName) {
        this.userName = userName;
    }

    // setter for password with validation
    public void setPassword(String password) {
        if (password.length() >= 8) {
            this.password = password;
            System.out.println("Password set successfully");
        } else {
            System.out.println("Password must be at least 8 characters");
        }
    }

    // getter methods
    public String getUserName() {
        return userName;
    }

    public String getPassword() {
        return password;
    }

    // main method for testing
    public static void main(String[] args) {

        Login l = new Login();

        l.setUserName("admin");
        l.setPassword("admin123");   // valid password

        System.out.println("Username: " + l.getUserName());
        System.out.println("Password: " + l.getPassword());
    }
}
class Animal {

    // method in parent class
    void makeSound() {
        System.out.println("Animal makes a sound");
    }
}



class Dog extends Animal {

    // overridden method in child class
    void makeSound() {
        System.out.println("Dog barks");
    }

    public static void main(String[] args) {

        Animal a = new Animal();
        a.makeSound();   // parent method

        Dog d = new Dog();
        d.makeSound();   // child method
    }
}
